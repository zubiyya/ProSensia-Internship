# ---------- DAY 30: AI Safety & PollyGlot Project ----------
import google.generativeai as genai

API_KEY = "you_gemini_api_here"  
genai.configure(api_key=API_KEY)

safety_settings = [
    {"category": "HARM_CATEGORY_HARASSMENT", "threshold": "BLOCK_MEDIUM_AND_ABOVE"},
    {"category": "HARM_CATEGORY_HATE_SPEECH", "threshold": "BLOCK_MEDIUM_AND_ABOVE"},
    {"category": "HARM_CATEGORY_SEXUALLY_EXPLICIT", "threshold": "BLOCK_MEDIUM_AND_ABOVE"},
    {"category": "HARM_CATEGORY_DANGEROUS_CONTENT", "threshold": "BLOCK_MEDIUM_AND_ABOVE"}
]

model = genai.GenerativeModel('gemini-1.5-flash')

print("ðŸŒŽ PollyGlot: Hi! I'm your multi-language AI assistant!")
print("   I can translate between English, French, Spanish, and Urdu.")
print("   Type 'quit' to exit.\n")

while True:

    user_input = input("You: ")
    
    if user_input.lower() == 'quit':
        print("PollyGlot: Goodbye!")
        break
    
    prompt = f"""
    Translate this text to French, Spanish, and Urdu. Also provide a friendly response in one of these languages:
    
    Original Text: {user_input}
    
    Please format your response exactly like this:
    French: [translation here]
    Spanish: [translation here] 
    Urdu: [translation here]
    Response: [friendly response in one of these languages]
    """
    
    try:
        response = model.generate_content(prompt, safety_settings=safety_settings)
        print("\nPollyGlot:")
        print(response.text)
        print()
        
    except Exception as e:
        print(f"Error: {e}")


